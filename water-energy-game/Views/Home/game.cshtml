@{
    ViewData["Title"] = "Climate Adaptation Game";
}
<link rel="stylesheet" href="~/css/game.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/Income.css" asp-append-version="true" />

<br />
<br />

    <div class="main-container">
        <aside class="sidebar">
            <div class="goal" data-goal="health">
                <img src="/img/C9aJSTNg.svg" alt="Health">
                <div class="goal-underline health-underline"></div>
            </div>
            <div class="goal" data-goal="water">
                <img src="/img/CafkMMVf.svg" alt="Water">
                <div class="goal-underline water-underline"></div>
            </div>
            <div class="goal" data-goal="energy">
                <img src="/img/CIezRw_l.svg" alt="Energy">
                <div class="goal-underline energy-underline"></div>
            </div>
            <div class="goal" data-goal="cities">
                <img src="/img/CJ5krmnu.svg" alt="Cities">
                <div class="goal-underline cities-underline"></div>
            </div>
            <div class="goal" data-goal="land">
                <img src="/img/CrtR391G.svg" alt="Land">
                <div class="goal-underline land-underline"></div>
            </div>
        </aside>
        <div class="content">
            <div class="top-bar">
                <div class="info-section">
                    <img src="/img/avatar.svg" alt="Avatar" class="avatar">
                    <div class="info-text">
                        Now it’s time to take our first measures. Click on the icons on the map for information about the different choices. You must make a choice on each mission before you can move forwards in time.
                    </div>
                </div>
                <div class="actions-section">
                    <button class="action-button settings-btn">
                        <img src="/img/settings-icon.svg" alt="Settings">
                    </button>
                    <button class="action-button menu-btn">
                        <img src="/img/menu-icon.svg" alt="Menu">
                    </button>
                </div>
            </div>

       
        <div class="map-container">
            <div class="box">
                <div class="top">Year</div>
                <div class="bottom">2020</div>
            </div>
            <button class="button button1" onclick="showInitialPopup()"></button>
            <button class="button button2" ></button>
            <button class="button button3" onclick="showInitialPopup2()"></button>
        </div>
        </div>
        <div class="details-popup" id="details-popup">
            <button class="close-btn" id="close-popup">&times;</button>
            <h2 id="goal-title">Goal Title</h2>
            <p id="goal-description">Goal description will appear here.</p>
        </div>

    <div class="sidebar">
        <!-- Wallet Section -->
        <div class="wallet">
            <span>Wallet</span>
            <div class="wallet-box">
                <span id="Wallet2">12,000</span>
                <img src="/img/coins.svg" alt="Coins" width="20">
            </div>
        </div>

        <!-- Saved Lives Section -->
        <div class="saved-lives">
            <span>Saved lives</span>
            <div class="saved-box">
                <img src="/img/smile.svg" alt="Smile" width="18">
                <span>0 / 0</span>
            </div>
        </div>

        <!-- Income and Expenses -->
        <div class="income-expenses">
            <span><b>Incomes and expenses</b></span>
            <span>2020 - 2030</span>
            <div class="income-list">
                <div class="income-item">
                    <img src="/img/income.svg" alt="Income">
                    <div class="income-box">
                        <span>12,000</span>
                        <img src="/img/coins2.svg" alt="Coins" width="16">
                    </div>
                </div>

                <div class="income-item">
                    <img src="/img/tool.svg" alt="Tool">
                    <span>0</span>
                    <img src="/img/coins2.svg" alt="Coins" width="16">

                </div>

                <div class="income-item">
                    <img src="/img/wrench.svg" alt="Wrench">
                    <span>0</span>
                    <img src="/img/coins2.svg" alt="Coins" width="16">

                </div>

                <div class="income-item">
                    <img src="/img/tree.svg" alt="Tree">
                    <span>?</span>
                    <img src="/img/coins2.svg" alt="Coins" width="16">

                </div>

                <div class="income-item">
                    <img src="/img/sun.svg" alt="Sun">
                    <span>?</span>
                    <img src="/img/coins2.svg" alt="Coins" width="16">

                </div>

                <div class="income-item">
                    <img src="/img/rain.svg" alt="Rain">
                    <span>?</span>
                    <img src="/img/coins2.svg" alt="Coins" width="16">

                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="footer">
            <img src="/img/download (3).svg" alt="Coins" width="20">
            <br />
            <div class="footer-box">
               

                <span>12,000</span>
                <img src="/img/coins2.svg" alt="Coins" width="16">

            </div>
        </div>
    </div>

    <!-- النافذة الثانية -->
    <div class="popup" id="popup">
        <button type="button" class="close-btn" onclick="hidePopup()">&times;</button>
        <h2 id="popup-title">Densify the city</h2>
        <p id="popup-description">
            We need new housing in the city. New housing will increase the flow of new citizens and increase tax revenues.
            <br><br>
            If you want to densify the city – how should the housing area be designed?
            <br><br>
            Click the different alternatives for more information.
        </p>

        <!-- الخيارات -->
        <div class="options">
            <div class="option" onclick="selectOption('A', 8000, '/img/a.svg', 'Apartment blocks with individual parking. Dark facades.')">
                <img src="/img/a.svg" alt="Option A">
                <p>A - 8,000</p>
            </div>
            <div class="option" onclick="selectOption('B', 10000, '/img/b.svg', 'Apartment blocks with carpool parking. Bright facades.')">
                <img src="/img/b.svg" alt="Option B">
                <p>B - 10,000</p>
            </div>
            <div class="option" onclick="selectOption('C', 12000, '/img/c.svg', 'Apartment blocks with community parking.')">
                <img src="/img/c.svg" alt="Option C">
                <p>C - 12,000</p>
            </div>
            <div class="option" onclick="selectOption('X', 0, '/img/d.jpg', 'Do nothing option.')">
                <img src="/img/d.jpg" alt="Option X">
                <p>X - 0</p>
            </div>
        </div>
    </div>

    <!-- النافذة الجديدة الثانية -->
    <div class="popup" id="new-popup">
        <button class="close-btn" onclick="hidePopup()">&times;</button>
        <h2 id="new-popup-title"></h2>
        <div class="details">
            <img id="new-popup-image" class="selected-image" src="" alt="Selected Option">
            <p id="new-popup-description"></p>
            <!-- عرض قيمة الأموال -->
            <img src="/img/tool.svg" alt="Tool" style="width: 40px; height: 40px;">
            <span id="new-popup-tool-one"></span>
            <img src="/img/coins2.svg" alt="Coins" width="19">


            <img src="/img/wrench.svg" alt="Wrench" style="width: 40px; height: 40px;">
            <p id="new-popup-wrench-one"></p>
            <img src="/img/coins2.svg" alt="Coins" width="19">


            <img src="/img/income.svg" alt="income" style="width: 40px; height: 40px;">
            <p id="calculateValue"></p>
            <img src="/img/coins2.svg" alt="Coins" width="19">

        </div>
        <p>
            Do you want to select this alternative?
            (You can change your choice before stepping forward in time)
        </p>
        <!-- أزرار Yes و No -->
        <div class="buttons">
            <button class="yes" onclick="handleYes()">Yes</button>
            <button class="no" onclick="hidePopup()">No</button>
        </div>
    </div>

   

    <!-- النافذة الأولى (popup2) -->
    <div class="popup" id="popup2">
        <button type="button" class="close-btn" onclick="hidePopup()">&times;</button>
        <h2 id="popup-title2">Densify the city</h2>
        <p id="popup-description2">
            We need new housing in the city. New housing will increase the flow of new citizens and increase tax revenues.
            <br><br>
            If you want to densify the city – how should the housing area be designed?
            <br><br>
            Click the different alternatives for more information.
        </p>
        <!-- الخيارات -->
        <div class="options">
            <div class="option" onclick="selectOption2('A2', 500, '/img/a2.svg', 'Apartment blocks with individual parking. Dark facades.')">
                <img src="/img/a2.svg" alt="Option A2">
                <p>A2 - 500</p>
            </div>
            <div class="option" onclick="selectOption2('B2', 2000, '/img/b2.svg', 'Apartment blocks with carpool parking. Bright facades.')">
                <img src="/img/b2.svg" alt="Option B2">
                <p>B2 - 2000</p>
            </div>
            <div class="option" onclick="selectOption2('C2', 6000, '/img/c2.svg', 'Apartment blocks with community parking.')">
                <img src="/img/c2.svg" alt="Option C2">
                <p>C2 - 6,000</p>
            </div>
            <div class="option" onclick="selectOption2('X2', 0, '/img/d.jpg', 'Do nothing option.')">
                <img src="/img/d.jpg" alt="Option X2">
                <p>X2 - 0</p>
            </div>
        </div>
    </div>

    <!-- النافذة الثانية (new-popup2) لتأكيد الاختيار -->
    <div class="popup" id="new-popup2">
        <button class="close-btn" onclick="hidePopup()">&times;</button>
        <h2 id="new-popup-title2"></h2>
        <div class="details">
            <img id="new-popup-image2" class="selected-image" src="" alt="Selected Option">
            <p id="new-popup-description2"></p>

            <!-- عرض قيمة الأموال -->
            <img src="/img/tool.svg" alt="Tool" style="width: 40px; height: 40px;">
            <span id="new-popup-tool"></span>
            <img src="/img/coins2.svg" alt="Coins" width="19">


            <img src="/img/wrench.svg" alt="Wrench" style="width: 40px; height: 40px;">
            <p id="new-popup-wrench"></p>
            <img src="/img/coins2.svg" alt="Coins" width="19">


            

        </div>
        <p>Do you want to select this alternative? (You cannot change your selection later.)</p>
        <!-- أزرار Yes و No -->
        <div class="buttons">
            <button class="yes" onclick="handleYes2()">Yes</button>
            <button class="no" onclick="hidePopup()">No</button>
        </div>
    </div>


    </div>
<script src="~/js/updateWallet.js"></script>
<script src="~/js/game.js"></script>